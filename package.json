{
  "name": "jskos-validate",
  "version": "0.3.3",
  "description": "Validation for JSKOS data.",
  "homepage": "https://github.com/gbv/jskos-validate",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbv/jskos-validate.git"
  },
  "bugs": {
    "url": "https://github.com/gbv/jskos-validate/issues"
  },
  "license": "MIT",
  "main": "lib/validate.js",
  "files": [
    "index.js",
    "lib",
    "jskos/schemas",
    "test"
  ],
  "scripts": {
    "test": "mocha",
    "lint": "eslint ./**/*.js",
    "fix": "eslint --fix ./**/*.js",
    "lint-staged": "lint-staged",
    "release": "git checkout dev && git pull && npm version $SEMVER && git push && git checkout main && git merge dev && git push --follow-tags && git checkout dev",
    "release:patch": "SEMVER=patch npm run release",
    "release:minor": "SEMVER=minor npm run release",
    "release:major": "SEMVER=major npm run release"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": [
    "test",
    "lint-staged"
  ],
  "author": "Stefan Peters",
  "devDependencies": {
    "eslint": "^6.0.0",
    "glob": "^7.1.2",
    "lint-staged": "^9.0.0",
    "mocha": "^6.0.0",
    "pre-commit": "^1.2.2"
  },
  "dependencies": {
    "ajv": "^6.5.2",
    "lodash": "^4.17.11"
  }
}
